{
  "manifest_version": 3,
  "name": "ClauseAI",
  "version": "0.1.0",
  "permissions": ["activeTab", "storage", "scripting", "sidePanel"],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {},
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ]
}
